#!/bin/bash -e


[ -z "$LOCAL_DIR" ] && die "No base dir specified"
[ ! -d "$LOCAL_DIR" ] && die "$LOCAL_DIR does not exist"
cd "$LOCAL_DIR"

mkdir -p deb/usr/share/fk-w3-ab-dashboard/
cp -rf dist/ deb/usr/share/fk-w3-ab-dashboard/
cp -rf lang/ deb/usr/share/fk-w3-ab-dashboard/
cp -rf lib/ deb/usr/share/fk-w3-ab-dashboard/
cp -rf src/ deb/usr/share/fk-w3-ab-dashboard/
set +x
